<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".mainmenu">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Occupancy Training"
        android:id="@+id/training_button"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="onButtonClick_training_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Occupency Testing"
        android:id="@+id/test_button"
        android:layout_below="@+id/training_button"
        android:layout_marginTop="40dp"
        android:layout_alignEnd="@+id/training_button"
        android:layout_alignParentStart="true"
        android:onClick="onButtonClick_testing_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Training Settings"
        android:id="@+id/setting_button"
        android:layout_below="@+id/test_button"
        android:layout_marginTop="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="onButtonClick_settingButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/exit_button"
        android:layout_below="@+id/setting_button"
        android:layout_marginTop="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="onButtonClick_exit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Server"
        android:id="@+id/enableServerButton"
        android:layout_below="@+id/training_button"
        android:layout_alignEnd="@+id/test_button"
        android:layout_alignParentStart="true"
        android:onClick="onClickEnableServer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/currentRoomTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
